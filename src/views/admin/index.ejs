
    <%- include('../partials/header') %>
    <%- include('../partials/nav') %>
    <main>
      <h1>Listado de Producto</h1>

      <a href="/admin/productos/create">Crear</a>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <!-- <th>Licencia</th> -->
            <th>Precio</th>
            <th>Imagen</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach(producto => {%>
            <tr>
              <td><%= producto.id %></td>
              <td><%= producto.nombre %></td>
              <!-- <td><%= producto.licencia %></td> -->
              <td><%= producto.precio %></td>
              <td><img width="150" src="/uploads/productos/producto_<%= producto.id %>.jpg" alt="<%= producto.nombre %>"></td>
              <td><a href="/admin/productos/<%= producto.id %>/edit">Editar</a> | 
              <form
                class="form-delete"
                style="display: inline-block"
                action="/admin/productos/<%= producto.id %>?_method=DELETE"
                method="post"
                <button type="submit">Borrar</button>
              </form>
            </td>
            </tr>
          <%}) %>
        </tbody>
      </table>

      
    </main>
    <%- include('../partials/footer') %>

    <script>
      document.addEventListener("click", (event) => {
        if (event.target.closest("form").classList.contains("form-delete")) {
          event.preventDefault();

          const borrar = confirm("Â¿Esta seguro?");

          if (borrar) {
            event.target.closest("form").submit();
          }
        }
      });
    </script>
  